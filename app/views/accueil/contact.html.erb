<section id="main">
    <section id="formulaire-contact">
        <h1>Contact</h1>
        <form class="pure-form pure-form-stacked" action="<%= accueil_demande_contact_path %>" method="post">
            <div class="pure-g">
                <div class="pure-u-1 pure-u-md-11-24">
                    <label for="nom">Nom</label>
                    <input id="nom" name="nom" class="pure-u-1" type="text">
                </div>
                <div class="pure-u-1 pure-u-md-2-24"></div>
                <div class="pure-u-1 pure-u-md-11-24">
                    <label for="prenom">Prénom</label>
                    <input id="prenom" name="prenom" class="pure-u-1" type="text">
                </div>

                <div class="pure-u-1 pure-u-md-11-24">
                    <label for="courriel">Courriel</label>
                    <input id="courriel" name="courriel" class="pure-u-1" type="email" required>
                </div>
                <div class="pure-u-1 pure-u-md-2-24"></div>
                <div class="pure-u-1 pure-u-md-11-24">
                    <label for="telephone">Téléphone</label>
                    <input id="telephone" name="telephone" class="pure-u-1" type="tel">
                </div>

                <div class="pure-u-1">
                    <label for="message">Message</label>
                    <textarea id="message" name="message" class="pure-input-1" rows="7"> </textarea>
                </div>
            </div>

            <button type="submit" class="pure-button pure-button-primary">Envoyer</button>
        </form>
    </section>
</section>

